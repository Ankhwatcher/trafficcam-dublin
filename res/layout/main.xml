<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="10dip"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="10dip"
		android:text="@string/camera_prompt" />
		
	<Spinner android:id="@+id/Spinner01" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip" android:prompt="@string/camera_prompt" />	
	<!-- Image View will be replaced with Gallery View.
	<ImageView android:layout_height="wrap_content"
		android:maxHeight="288px" android:maxWidth="384px" android:minHeight="288px"
		android:minWidth="384px" android:layout_width="wrap_content"
		android:baselineAlignBottom="false" android:layout_gravity="center"
		android:id="@+id/imageholder" android:src="@drawable/imageholder"></ImageView>
		-->
	<Gallery 
		android:id="@+id/gallery"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:baselineAlignBottom="false"
		android:layout_gravity="center"/>
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_marginTop="10dip"
		android:gravity="center_horizontal"
		android:text="@string/longpress_hint" />

</LinearLayout>
